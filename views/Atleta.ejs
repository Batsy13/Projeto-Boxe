<!DOCTYPE ejs>
<html lang="pt_BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Atleta</title>
    <link rel="stylesheet" href="CSS/atleta.css">
    <link rel="shortcut icon" type="imagex/png" href="./IMG/france-logo-init.png">
</head>

<body>
    <section class="main-bg page">

        <div class="conteiner">

            <div class="header">
                <div>
                    <a href="http://localhost:3000/Agendar" style="margin-right:20px;"> Agendar Partida </a>
                    <a href="http://localhost:3000/Partida"> Efetivar Partida </a>
                </div>
                <a href="http://localhost:3000/menu"><img  src="./IMG/logo-olim-juiz.png" alt="Ícone das Olimpíadas" class="logo"></a>
                <a href="http://localhost:3000/Dados">Buscar Dados</a>
            </div>
            <form action="/Atleta" method="POST">

                <div class="line1">

                    <input type="text" name="atleta" id="atleta" placeholder="Nome" required>

                    <div class="buscapais">
                        <input type="text" name="pais" id="pais" placeholder="País" onkeyup="filtrar()" required>

                    <ul id="listaPaises">
                    </ul>

                    </div>
                    
                </div>
                
                <div class="line1">

                    <input type="number" name="peso" id="peso" placeholder="Peso" required>
                    <input type="number" name="idade" id="idade" placeholder="Idade" required>

                </div>

                <div class="line2">

                    <select name="genero" id="genero">
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>

                </div>

                <button class="submit" type="submit"> Cadastrar Atleta </button>

            </form>
        </div>

    </section>

    <script>

fetch('api/paises')
    .then(res => res.json())
    .then(json => {
        console.log(json);
        const ul = document.getElementById('listaPaises');
        json.sort((a, b) => a.nome.localeCompare(b.nome)).slice(0, 5).forEach((item) => {
            const li = document.createElement("li");
            li.setAttribute("onclick", `mudarValor('${item.nome}')`);
            li.innerHTML = `<span>${item.nome}</span>`;
            ul.appendChild(li);
        });
    });

function mudarValor(pais){

    ul = document.getElementById('listaPaises');
    input = document.getElementById('pais');

    ul.style.display = "none";

    input.value = pais;
    
}

function filtrar(){

    var input,
        filter,
        ul,
        li,
        a,
        i,
        span,
        txtValue,
        count = 0

    input = document.getElementById('pais');
    ul = document.getElementById('listaPaises');
    li = ul.getElementsByTagName("li");

    filter = input.value.toUpperCase();

    for (i = 0; i < li.length; i++) {
        
        span = li[i].getElementsByTagName("span")[0];
        txtValue = span.textContent || span.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {

            li[i].style.display = "";

            count++
        } else {
            li[i].style.display = "none";
        }
    }
    
     if(filter ===""){ 
	 ul.style.display = "none";
	 }else{ 
	 ul.style.display = "block";
	 }


}

    </script>
</body>


</html>